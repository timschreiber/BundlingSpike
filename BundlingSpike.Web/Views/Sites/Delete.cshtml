@model BundlingSpike.Web.Models.SiteViewModel

@{
    ViewBag.Title = "Delete Site";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-xs-12 col-md-6">
        <p>Are you sure you want to delete the following Site?</p>
        @using (Html.BeginForm("Delete", "Sites", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                <p class="form-control-static">@Html.DisplayFor(x => x.Name)</p>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                <p class="form-control-static">@Html.DisplayFor(x => x.Description)</p>
            </div>

            <div class="form-group text-right">
                @Html.ActionLink("Cancel", "Index", "Sites", new { @class = "btn btn-link" })
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        }
    </div>
</div>
